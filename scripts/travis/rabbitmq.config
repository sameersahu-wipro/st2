[
  {rabbit, [
     {ssl_listeners, [5671]},
     {ssl_options, [{cacertfile, "/etc/rabbitmq/ca_certificate_bundle.pem"},
                    {certfile,   "/etc/rabbitmq/server_certificate.pem"},
                    {keyfile,    "/etc/rabbitmq/private_key.pem"},
                    {verify,     verify_peer},
                    {fail_if_no_peer_cert, false}]}
   ]}
].
